{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    {% for message in app.flashes('success') %}
    <div class="alert alert-success">
        {{ message }}
    </div>
    {% endfor %}

    {% if username %}
        <h3>Bonjour {{ username }} !</h3>
    {% else %}
        <h3>Bienvenue sur le site</h3>
    {% endif %}

    
{% endblock %}
