<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        {{ encore_entry_link_tags('app') }}
    </head>
    <body>
    <header>
        <nav>
            <ul>
                <li><a href="{{ path("home") }}">Accueil</a></li>
                <li><a href="{{ path("liste") }}">Nos glaces</a></li>
                {% if is_granted('ROLE_ADMIN')%}
                    <li><a href="{{ path("admin") }}">Panel Admin</a></li>
                {% endif %}
                {% if is_granted('ROLE_USER') %}
                    <li><a href="{{ path("add_glace") }}">Ajouter une glace</a></li>
                    <li><a href="{{ path('logout') }}">Se déconnecter</a></li>
                {% endif %}
                {% if not is_granted('ROLE_USER') %}
                    <li><a href="{{ path('login') }}">Se connecter</a></li>
                    <li><a href="{{ path('inscription') }}">S'inscrire</a></li>
                {% endif %}       
            </ul>
        </nav>
    </header>
        {% block body %}{% endblock %}
    </body>
</html>
